{
  "name": "<%= moduleName %>",
  "version": "0.0.0",
  "description": "<%= moduleDescription %>",
  "license": "MIT",
  "repository": "<%= githubUsername %>/<%= repoName %>",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= humanizedWebsite %>"
  },<% if (cli) { %>
  "bin": "src/cli.js",<% } %>
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint **/*.js",
    "test": "<% if (nyc) { %>nyc <% } %>ava",
    "code-quality": "npm run lint && npm run test"
  },
  "files": [
    "src/"
  ],
  "keywords": [<% if (cli) { %>
    "cli",<% } %>
    ""
  ],
  "dependencies": {<% if (cli) { %>
    "yargs": "^8.0.1"
  <% } %>},
  "devDependencies": {
    "ava": "^0.19.1",<% if (codecov) { %>
    "codecov": "^2.2.0",<% } %><% if (nyc) { %>
    "nyc": "^10.0.0",<% } %>
    "eslint": "^4.19.1",
    "eslint-plugin-ava": "^4.5.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-config-prettier": "^2.9.0",
    "prettier": "^1.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4"
  },
  "lint-staged": {
    "concurrent": false,
    "linters": {
      "**/*.{js,json,md}": ["prettier --write"],
      "**/*.js": ["eslint", "git add"]
    }
  }<% if (codecov) { %>,
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  }<% } %>
}
