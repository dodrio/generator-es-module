{
  "name": "<%= moduleName %>",
  "version": "0.0.0",
  "description": "<%= moduleDescription %>",
  "license": "MIT",
  "repository": "<%= githubUsername %>/<%= repoName %>",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= humanizedWebsite %>"
  },<% if (cli) { %>
  "bin": <% if (transpile) { %>"dist/cli.js"<% } else { %>"src/cli.js"<% } %>,<% } %>
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "precommit": "lint-staged",
    "lint": "eslint 'src/**/*.js' 'test/**/*.js'",
    "test": "<% if (nyc) { %>nyc <% } %>ava",
    "code-quality": "npm run lint && npm run test"<% if (transpile) { %>,
    "build": "rm -rf dist && babel src -d dist",
    "release":
      "npm run code-quality && npm run build && npm publish"<% } %>
  },
  "files": [
    <% if (transpile) { %>"dist/"<% } else { %>"src/"<% } %>
  ],
  "main": <% if (transpile) { %>"dist/index.js"<% } else { %>"src/index.js"<% } %>,
  "keywords": [<% if (cli) { %>
    "cli",<% } %>
    ""
  ],
  "dependencies": {<% if (cli) { %>
    "yargs": "^12.0.1"
  <% } %>},
  "devDependencies": {
    "ava": "^0.25.0",<% if (transpile) { %>
    "@babel/cli": "^7.0.0-beta.54",
    "@babel/core": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",<% } %><% if (codecov) { %>
    "codecov": "^3.0.4",<% } %><% if (nyc) { %>
    "nyc": "^12.0.2",<% } %>
    "eslint": "^5.2.0",
    "eslint-plugin-ava": "^5.0.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-config-prettier": "^2.9.0",
    "prettier": "^1.11.1",
    "husky": "^0.14.3",
    "lint-staged": "^7.0.4"
  },
  "lint-staged": {
    "linters": {
      "**/*.{json,md}": ["prettier --write", "git add"],
      "**/*.js": ["prettier --write", "eslint", "git add"]
    }
  }<% if (transpile) { %>,
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }<% } %><% if (codecov) { %>,
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  }<% } %>
}
