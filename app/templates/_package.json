{
  "name": "<%= moduleName %>",
  "version": "0.0.0",
  "description": "<%= moduleDescription %>",
  "license": "MIT",
  "repository": "<%= githubUsername %>/<%= repoName %>",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= humanizedWebsite %>"
  },<% if (cli) { %>
  "bin": "cli.js",<% } %>
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "test": "eslint && <% if (nyc) { %>nyc <% } %>ava"
  },
  "files": [
    "index.js"<% if (cli) { %>,
    "cli.js"<% } %>
  ],
  "keywords": [<% if (cli) { %>
    "cli-app",
    "cli",<% } %>
    ""
  ],
  "dependencies": {<% if (cli) { %>
    "yargs": "^8.0.1"
  <% } %>},
  "devDependencies": {
    "ava": "^0.19.1",<% if (codecov) { %>
    "codecov": "^2.2.0",<% } %><% if (nyc) { %>
    "nyc": "^10.0.0",<% } %>
    "eslint": "^4.19.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-config-prettier": "^2.9.0",
    "prettier": "^1.11.1"
  }<% if (codecov) { %>,
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  }<% } %>
}
