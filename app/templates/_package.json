{
  "name": "<%= moduleName %>",
  "version": "0.0.0",
  "description": "<%= moduleDescription %>",
  "license": "MIT",
  "repository": "<%= githubUsername %>/<%= repoName %>",
  "author": {
    "name": "<%= name %>",
    "email": "<%= email %>",
    "url": "<%= humanizedWebsite %>"
  },
  "engines": {
    "node": ">=8"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.js' 'test/**/*.js'",
    "test": "<% if (nyc) { %>nyc <% } %>ava",
    "code-quality": "npm run lint && npm run test",<% if (transpile) { %>
    "build": "rm -rf dist && babel src -d dist",
    "release":
      "npm run code-quality && npm run build && npm publish"<% } else { %>
    "release": "npm run code-quality && npm publish"<% } %>
  },
  "files": [
    <% if (transpile) { %>"dist/"<% } else { %>"src/"<% } %>
  ],
  "main": <% if (transpile) { %>"dist/index.js"<% } else { %>"src/index.js"<% } %>,
  "keywords": [
    ""
  ],
  "dependencies": {<% if (!transpile) { %>
    "esm": "^3.0.84"<% } %>
  },
  "devDependencies": {
    "ava": "1.0.0-rc.1",<% if (transpile) { %>
    "babel-eslint": "^10.0.1",
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",<% } %><% if (codecov) { %>
    "codecov": "^3.0.4",<% } %><% if (nyc) { %>
    "nyc": "^12.0.2",<% } %>
    "eslint": "^5.2.0",
    "eslint-plugin-ava": "^5.0.0",<% if (!transpile) { %>
    "eslint-plugin-node": "^8.0.0",<% } %>
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-config-prettier": "^3.1.0",
    "prettier": "^1.11.1",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4"
  },<% if (transpile) { %>
  "ava": {
    "require": [
      "./test/_register.js"
    ]
  },<% } %>
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "**/*.{json,md}": ["prettier --write", "git add"],
      "**/*.js": ["eslint --fix", "git add"]
    }
  }<% if (transpile) { %>,
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }<% } %><% if (codecov) { %>,
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ]
  }<% } %>
}
